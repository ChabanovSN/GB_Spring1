<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
            http://www.springframework.org/schema/beans/spring-beans.xsd">


    <bean id="cameraC" class="ru.chabanov.xml.CameraImp">
        <property name="cameraRoll" >
            <bean class="ru.chabanov.xml.ColorCameraRoll"/>
        </property>
    </bean>
    <bean id="cameraBW" class="ru.chabanov.xml.CameraImp">
        <property name="cameraRoll" >
            <bean class="ru.chabanov.xml.BlackAndWhiteCameraRoll"/>
        </property>
    </bean>

</beans>